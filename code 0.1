                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Home Page -->
    <section id="home" class="page-section active">
        <div class="hero-section">
            <div class="hero-content">
                <div class="hero-badge">
                    <span>âœž</span>
                    <span>Welcome to our community</span>
                </div>
                <h1 class="hero-title">United with Christ</h1>
