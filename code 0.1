                        <div class="verse-list">
                            <div class="verse-item">Matthew 5:6</div>
                            <div class="verse-item">John 3:16-18</div>
                        </div>
                    </div>

                    <div class="section">
                        <div class="section-title">Lessons</div>
                        <div class="verse-list">
                            <div class="verse-item">Romans 8:28</div>
                            <div class="verse-item">Philippians 4:13</div>
                        </div>
                    </div>

                    <div class="section">
                        <div class="section-title">Vision(Vediente)</div>
                        <div class="verse-list">
                            <div class="verse-item">Jeremiah 29:11</div>
                        </div>
                    </div>

                    <div class="section">
