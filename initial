            'Habakkuk': 3,
            'Zephaniah': 3,
            'Haggai': 2,
            'Zechariah': 14,
            'Malachi': 4,
            'Matthew': 28,
            'Mark': 16,
            'Luke': 24,
            'John': 21,
            'Acts': 28,
            'Romans': 16,
            '1 Corinthians': 16,
            '2 Corinthians': 13,
            'Galatians': 6,
            'Ephesians': 6,
            'Philippians': 4,
            'Colossians': 4,
            '1 Thessalonians': 5,
            '2 Thessalonians': 3,
            '1 Timothy': 6,
            '2 Timothy': 4,
            'Titus': 3,
            'Philemon': 1,
            'Hebrews': 13,
            'James': 5,
            '1 Peter': 5,
            '2 Peter': 3,
            '1 John': 5,
            '2 John': 1,
            '3 John': 1,
            'Jude': 1,
            'Revelation': 22
        };

        // Maximum verses per chapter (simplified - actual counts vary)
        const maxVersesPerChapter = 150; // Approximate maximum

        let editingPost = null;
        let customSectionCount = 0;

        function openModal() {
            document.getElementById('postModal').style.display = 'block';
            document.getElementById('modalTitle').textContent = 'Add New Post';
            document.getElementById('postForm').reset();
            clearDynamicSections();
            editingPost = null;
            
            // Set default date to today
            document.getElementById('postDate').valueAsDate = new Date();
            
            // Add initial verse inputs
            addVerse('opening');
            addVerse('lessons');
            addVerse('vision');
        }

        function closeModal() {
            document.getElementById('postModal').style.display = 'none';
        }

        function clearDynamicSections() {
            document.getElementById('openingVerses').innerHTML = '';
            document.getElementById('lessonsVerses').innerHTML = '';
            document.getElementById('visionVerses').innerHTML = '';
            document.getElementById('customSections').innerHTML = '';
            customSectionCount = 0;
        }

        function addVerse(section) {
            const container = document.getElementById(section + 'Verses');
            const verseId = section + '_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            
            const verseDiv = document.createElement('div');
            verseDiv.className = 'verse-input-group';
            verseDiv.innerHTML = `
                <select onchange="updateChapters('${verseId}')" id="${verseId}_book">
                    <option value="">Select Book</option>
                    ${Object.keys(bibleBooks).map(book => `<option value="${book}">${book}</option>`).join('')}
                </select>
                <select onchange="updateVerses('${verseId}')" id="${verseId}_chapter" disabled>
                    <option value="">Chapter</option>
                </select>
                <input type="number" id="${verseId}_verse1" placeholder="Verse" min="1" disabled>
                <span>-</span>
                <input type="number" id="${verseId}_verse2" placeholder="End" min="1" disabled>
                <div class="verse-display" id="${verseId}_display">Select book, chapter, and verse</div>
                <button type="button" class="btn btn-danger" onclick="removeVerse(this)">Ã—</button>
            `;
            
            container.appendChild(verseDiv);
            
            // Add event listeners for verse inputs
            document.getElementById(verseId + '_verse1').addEventListener('input', () => updateVerseDisplay(verseId));
            document.getElementById(verseId + '_verse2').addEventListener('input', () => updateVerseDisplay(verseId));
        }

        function updateChapters(verseId) {
            const bookSelect = document.getElementById(verseId + '_book');
            const chapterSelect = document.getElementById(verseId + '_chapter');
            const verse1Input = document.getElementById(verseId + '_verse1');
            const verse2Input = document.getElementById(verseId + '_verse2');
            
            const selectedBook = bookSelect.value;
            
            if (selectedBook) {
                const chapters = bibleBooks[selectedBook];
                chapterSelect.innerHTML = '<option value="">Chapter</option>';
                
                for (let i = 1; i <= chapters; i++) {
                    chapterSelect.innerHTML += `<option value="${i}">${i}</option>`;
                }
                
                chapterSelect.disabled = false;
                verse1Input.disabled = true;
                verse2Input.disabled = true;
                verse1Input.value = '';
                verse2Input.value = '';
            } else {
                chapterSelect.innerHTML = '<option value="">Chapter</option>';
                chapterSelect.disabled = true;
                verse1Input.disabled = true;
                verse2Input.disabled = true;
            }
            
            updateVerseDisplay(verseId);
        }

        function updateVerses(verseId) {
            const chapterSelect = document.getElementById(verseId + '_chapter');
            const verse1Input = document.getElementById(verseId + '_verse1');
            const verse2Input = document.getElementById(verseId + '_verse2');
            
            if (chapterSelect.value) {
                verse1Input.disabled = false;
                verse2Input.disabled = false;
                verse1Input.max = maxVersesPerChapter;
                verse2Input.max = maxVersesPerChapter;
            } else {
                verse1Input.disabled = true;
                verse2Input.disabled = true;
                verse1Input.value = '';
                verse2Input.value = '';
            }
            
            updateVerseDisplay(verseId);
        }

        function updateVerseDisplay(verseId) {
            const book = document.getElementById(verseId + '_book').value;
            const chapter = document.getElementById(verseId + '_chapter').value;
            const verse1 = document.getElementById(verseId + '_verse1').value;
            const verse2 = document.getElementById(verseId + '_verse2').value;
            const display = document.getElementById(verseId + '_display');
            
            if (book && chapter && verse1) {
                let reference = `${book} ${chapter}:${verse1}`;
                if (verse2 && verse2 !== verse1) {
                    reference += `-${verse2}`;
                }
                display.textContent = reference;
            } else {
                display.textContent = 'Select book, chapter, and verse';
            }
        }

        function removeVerse(button) {
            button.parentElement.remove();
        }

        function addCustomSection() {
            customSectionCount++;
            const container = document.getElementById('customSections');
            const sectionId = 'custom_' + customSectionCount;
            
            const sectionDiv = document.createElement('div');
            sectionDiv.className = 'form-group';
            sectionDiv.innerHTML = `
                <div class="dynamic-section custom-section">
                    <div class="section-header">
                        <input type="text" placeholder="Section Title (e.g., Closing)" class="speaker-input" id="${sectionId}_title" style="max-width: 300px;">
                        <div>
                            <button type="button" class="add-verse-btn" onclick="addCustomVerse('${sectionId}')">+ Add Verse</button>
                            <button type="button" class="btn btn-danger" onclick="removeCustomSection(this)">Remove Section</button>
                        </div>
                    </div>
                    <div id="${sectionId}_verses"></div>
                </div>
            `;
            
            container.appendChild(sectionDiv);
        }

        function addCustomVerse(sectionId) {
            const container = document.getElementById(sectionId + '_verses');
            const verseId = sectionId + '_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            
            const verseDiv = document.createElement('div');
            verseDiv.className = 'verse-input-group';
            verseDiv.innerHTML = `
                <select onchange="updateChapters('${verseId}')" id="${verseId}_book">
                    <option value="">Select Book</option>
                    ${Object.keys(bibleBooks).map(book => `<option value="${book}">${book}</option>`).join('')}
                </select>
                <select onchange="updateVerses('${verseId}')" id="${verseId}_chapter" disabled>
                    <option value="">Chapter</option>
                </select>
                <input type="number" id="${verseId}_verse1" placeholder="Verse" min="1" disabled>
                <span>-</span>
                <input type="number" id="${verseId}_verse2" placeholder="End" min="1" disabled>
                <div class="verse-display" id="${verseId}_display">Select book, chapter, and verse</div>
                <button type="button" class="btn btn-danger" onclick="removeVerse(this)">Ã—</button>
            `;
            
            container.appendChild(verseDiv);
            
            // Add event listeners for verse inputs
            document.getElementById(verseId + '_verse1').addEventListener('input', () => updateVerseDisplay(verseId));
            document.getElementById(verseId + '_verse2').addEventListener('input', () => updateVerseDisplay(verseId));
        }

        function removeCustomSection(button) {
            button.closest('.form-group').remove();
        }

        function collectVerses(sectionId) {
            const container = document.getElementById(sectionId + 'Verses');
            const verses = [];
            
            container.querySelectorAll('.verse-input-group').forEach(group => {
                const display = group.querySelector('.verse-display');
                if (display.textContent !== 'Select book, chapter, and verse') {
                    verses.push(display.textContent);
                }
            });
            
            return verses;
        }

        function collectCustomSections() {
            const customSections = [];
            const container = document.getElementById('customSections');
            
            container.querySelectorAll('.custom-section').forEach(section => {
                const titleInput = section.querySelector('input[type="text"]');
                const title = titleInput.value.trim();
                
                if (title) {
                    const sectionId = titleInput.id.replace('_title', '');
                    const verses = [];
                    
                    section.querySelectorAll('.verse-input-group').forEach(group => {
                        const display = group.querySelector('.verse-display');
                        if (display.textContent !== 'Select book, chapter, and verse') {
                            verses.push(display.textContent);
                        }
                    });
                    
                    customSections.push({ title, verses });
                }
            });
            
            return customSections;
        }

        document.getElementById('postForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                date: document.getElementById('postDate').value,
                opening: collectVerses('opening'),
                lessons: collectVerses('lessons'),
                vision: collectVerses('vision'),
                speaker: document.getElementById('speaker').value,
                customSections: collectCustomSections()
            };
            
            if (editingPost) {
                updatePostDisplay(editingPost, formData);
            } else {
                createNewPost(formData);
            }
            
            closeModal();
        });

        function createNewPost(data) {
            const postsContainer = document.getElementById('postsContainer');
            const postDiv = document.createElement('div');
            postDiv.className = 'post-card';
            
            postDiv.innerHTML = generatePostHTML(data);
            postsContainer.insertBefore(postDiv, postsContainer.firstChild);
        }

        function generatePostHTML(data) {
            const formatDate = (dateString) => {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                });
            };

            const generateSection = (title, verses) => {
                if (!verses || verses.length === 0) return '';
                
                return `
                    <div class="section">
                        <div class="section-title">${title}</div>
                        <div class="verse-list">
                            ${verses.map(verse => `<div class="verse-item">${verse}</div>`).join('')}
                        </div>
                    </div>
                `;
            };

            let html = `
                <div class="post-header">
                    <div class="post-date">${formatDate(data.date)}</div>
                    <div class="post-actions">
                        <button class="btn btn-primary" onclick="editPost(this)">Edit</button>
                        <button class="btn btn-danger" onclick="deletePost(this)">Delete</button>
                    </div>
                </div>
            `;

            html += generateSection('Opening', data.opening);
            html += generateSection('Lessons', data.lessons);
            html += generateSection('Vision', data.vision);
            
            if (data.speaker) {
                html += `
                    <div class="section">
                        <div class="section-title">Speaker</div>
                        <div class="verse-list">
                            <div style="padding: 0.5rem;">${data.speaker}</div>
                        </div>
                    </div>
                `;
            }

            data.customSections.forEach(section => {
                html += generateSection(section.title, section.verses);
            });

            return html;
        }

        function editPost(button) {
            editingPost = button.closest('.post-card');
            document.getElementById('modalTitle').textContent = 'Edit Post';
            document.getElementById('postModal').style.display = 'block';
            
            // Extract data from post and populate form
            // This would require more complex parsing in a real implementation
            // For demo purposes, we'll just clear and show the form
            clearDynamicSections();
            addVerse('opening');
            addVerse('lessons');
            addVerse('vision');
        }

        function updatePostDisplay(postElement, data) {
            postElement.innerHTML = generatePostHTML(data);
        }

        function deletePost(button) {
            if (confirm('Are you sure you want to delete this post?')) {
                button.closest('.post-card').remove();
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('postModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Initialize with default verses
        window.addEventListener('load', function() {
            // Set today's date as default
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('postDate').value = today;
        });
    </script>
</body>
</html>
